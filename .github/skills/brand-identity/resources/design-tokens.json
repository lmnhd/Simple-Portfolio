    "version": "1.0.0",
    "last_updated": "2026-01-25"
  },
  "colors": {
    "primary": {
      "DEFAULT": "#2962FF",
      "hover": "#1E50D8",
      "light": "#4A7AFF",
      "foreground": "#FFFFFF",
      "comment": "Electric blue - professional tech feel, high contrast"
    },
    "secondary": {
      "DEFAULT": "#F4F4F5",
      "foreground": "#18181B",
      "comment": "Light gray - clean backgrounds, cards"
    },
    "background": "#FFFFFF",
    "foreground": "#18181B",
    "muted": {
      "DEFAULT": "#F4F4F5",
      "foreground": "#71717A"
    },
    "accent": {
      "DEFAULT": "#2962FF",
      "foreground": "#FFFFFF"
    },
    "destructive": "#EF4444",
    "success": "#10B981",
    "border": "#E4E4E7",
    "input": "#E4E4E7",
    "ring": "#2962FF",
    "hero_gradient": {
      "colors": ["#818cf8", "#c084fc", "#e879f9", "#38bdf8"],
      "background": "rgb(15, 23, 42)",
      "comment": "Purple/pink/cyan gradient for hero wavy background"
    },
    "text": {
      "primary": "#18181B",
      "secondary": "#71717A",
      "muted": "#A1A1AA",
      "link": "#2962FF",
      "hero_title": "#c4b5fd",
      "hero_subtitle": "rgba(255, 255, 255, 0.9)",
      "hero_muted": "rgba(255, 255, 255, 0.6)"
    }
  },
  "typography": {
    "font_family": {
      "primary": ["system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "sans-serif"],
      "comment": "System font stack for optimal performance and native feel"
    },
    "font_weight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "sizes": {
      "h1": { "mobile": "2.25rem", "desktop": "3rem", "class": "text-4xl md:text-5xl" },
      "h2": { "size": "1.875rem", "class": "text-3xl" },
      "h3": { "size": "1.25rem", "class": "text-xl" },
      "body": { "size": "1rem", "class": "text-base" },
      "small": { "size": "0.875rem", "class": "text-sm" },
      "xs": { "size": "0.75rem", "class": "text-xs" }
    },
    "line_height": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.625"
    }
  },
  "spacing": {
    "section_padding": {
      "vertical": "py-20",
      "horizontal": "px-4"
    },
    "container_max_width": {
      "default": "max-w-6xl",
      "narrow": "max-w-4xl"
    },
    "gap": {
      "cards": "gap-8",
      "items": "gap-4",
      "small": "gap-2"
    }
  },
  "ui": {
    "border_radius": {
      "default": "0.5rem",
      "small": "0.375rem",
      "large": "0.75rem",
      "full": "9999px",
      "class": {
        "default": "rounded-lg",
        "small": "rounded-md",
        "full": "rounded-full"
      }
    },
    "shadows": {
      "card": "shadow-md hover:shadow-xl",
      "button": "shadow-sm",
      "hero_avatar": "shadow-xl ring-4 ring-white/30"
    },
    "transitions": {
      "default": "transition-all duration-300",
      "fast": "transition-colors duration-200"
    },
    "borders": {
      "card": "border border-gray-200",
      "card_hover": "hover:border-primary",
      "section": "border-b border-gray-100"
    }
  },
  "components": {
    "button": {
      "primary": "px-8 py-3 font-semibold text-white rounded-lg bg-primary hover:bg-blue-700",
      "hero": "px-8 py-4 text-lg font-semibold text-white transition-all duration-300 border rounded-full bg-white/20 backdrop-blur-sm border-white/30 hover:bg-white/30 hover:-translate-y-1",
      "ghost": "hover:bg-gray-100 hover:text-foreground"
    },
    "card": {
      "base": "p-8 transition-colors bg-white border border-gray-200 rounded-lg hover:border-primary",
      "project": "overflow-hidden transition-colors border border-gray-200 rounded-lg bg-gray-50 hover:border-primary hover:shadow-lg"
    },
    "badge": {
      "tech": "px-3 py-1 text-sm font-medium border border-blue-200 rounded-lg bg-blue-50 text-primary"
    },
    "navbar": {
      "container": "fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-200",
      "link": "text-sm text-gray-700 hover:text-primary transition-colors font-medium"
    }
  },
  "images": {
    "portfolio_img_path": "/portfolio_img/",
    "headshot": "/headshot.jpg",
    "avatar_size": { "width": 128, "height": 128 },
    "project_thumbnail": { "aspect": "w-full h-48", "fit": "object-cover" }
  }
}